#!/bin/bash
cd ~
mkdir -p ropod-project-software/catkin_workspace/src
cd ropod-project-software/catkin_workspace/src
git clone https://github.com/ropod-project/tree-devpc.git ./
wstool init
wstool up
echo "source ~/ropod-project-software/catkin_workspace/src/platform/setup/devpc/setup.bash"  >> ~/.bashrc

git clone git@github.com:tue-ropod/ropod_common.git;
sudo mv ropod_common /opt/

cd ~
wget https://raw.githubusercontent.com/blumenthal/ropod-base-cpp/master/install_deps.sh
chmod 755 install_deps.sh
sudo ./install_deps.sh --workspace-path=/opt --install-path=/usr/local
cd /opt
sudo mkdir ropod
sudo mv ropod_common/ ropod

cd ~/ropod-project-software/catkin_workspace/src/functionalities;
wget -4 dlib.net/files/dlib-19.16.tar.bz2
tar -xf dlib-19.16.tar.bz2

source ~/ropod-project-software/catkin_workspace/src/platform/setup/devpc/setup.bash
rosdep update;rosdep install --from-path . -i -y;
cd ~/ropod-project-software/catkin_workspace; catkin_make;
